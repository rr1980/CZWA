<div id="adminView" class="view container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <div class="row">
                        <div class="col-md-9">
                            <h5 class="control-label">Benutzer</h5>
                        </div>
                        <div class="col-md-3">
                            <th_select><select class='form-control show-tick input-sm' data-style='btn btn-info btn-sm' data-bind='selectPicker: selectedUserId, optionsText: "showName", optionsValue : "userId",  selectPickerOptions: { optionsArray: users }'></select></th_select>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group-sm col-md-4"><label class='control-label' for='8eb26e3b-2ba3-4253-b1f6-09f65091d3cb'>Username</label><input class='form-control' id='8eb26e3b-2ba3-4253-b1f6-09f65091d3cb' data-bind='value: user().username'></input></div>
                        <div class="form-group-sm col-md-4"><label class='control-label' for='63f16cae-56d3-4ff8-9734-ae428399c7de'>Name</label><input class='form-control' id='63f16cae-56d3-4ff8-9734-ae428399c7de' data-bind='value: user().name'></input></div>
                        <div class="form-group-sm col-md-4"><label class='control-label' for='2a1d1232-84a7-43ca-95dc-86b13a5cf62c'>Vorname</label><input class='form-control' id='2a1d1232-84a7-43ca-95dc-86b13a5cf62c' data-bind='value: user().vorname'></input></div>
                    </div>
                    <div class="row row-buffTop">
                        <div class="form-group-sm col-md-8"><label class='control-label' for='8b735052-233d-4f78-acae-c21d26357647'>Rolle</label><select class='selectpicker form-control show-tick input-sm' data-style='btn btn-info btn-sm' multiple='true' data-bind='selectedOptions: user().roles, optionsText: "name", optionsValue : "id", options: [{"id":0,"name":"Admin"},{"id":1,"name":"Default"}]'></select></div>
                        <div class="form-group-sm col-md-4"><div class='form-group-sm col-md-12'><label class='control-label' for='7ffdba57-35b2-4075-9af5-6fccf756f90f'>&nbsp;</label></div><div class='form-group-sm pull-right'><button style='margin-left:10px;' class='btn btn-warning btn-sm' data-bind='click: onClickSave,disable: window.isLoading'>Speichern</button><button style='margin-left:10px;' class='btn btn-danger btn-sm' data-bind='click: onClickDelete,disable: window.isLoading,disable: (selectedUserId()<1)'>Löschen</button></div></div>
                    </div>
                    <div class="row row-buffTop">
                        <ul id="errors">

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var viewmodel = new ViewModels.AdminViewData({"users":[{"userId":-1,"name":null,"vorname":null,"username":null,"showName":"Neu...","roles":[-1]},{"userId":1,"name":"Riesner","vorname":"Rene","username":"rr1980","showName":"rr1980","roles":[0,1]},{"userId":2,"name":"Riesner","vorname":"Sven","username":"Oxi","showName":"Oxi","roles":[0,1]}],"errors":null});
        ko.applyBindings(viewmodel, document.getElementById('adminView'));

        $(".selectpicker").selectpicker('refresh');
    });
</script>
